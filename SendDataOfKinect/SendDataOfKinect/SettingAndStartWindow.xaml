<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="SendDataOfKinect.SettingAndStartWindow"
        Title="SettingAndStartWindow"    WindowStyle="None" AllowsTransparency="True"  WindowState="Maximized" Background="#FFBABABA">
    
        <Grid HorizontalAlignment="center" >
                <MediaElement x:Name="Media" Source="Video\title4.wmv" Stretch="Fill" />
            <StackPanel  Margin="100" VerticalAlignment="Bottom" HorizontalAlignment="Center"  >
			<TextBlock x:Name="Warning" HorizontalAlignment="Center" Text="正在进入" FontFamily="Adobe Kaiti Std R" FontSize="13.333" Foreground="White" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">
				<TextBlock.RenderTransform>
					<TransformGroup>
						<ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
						<SkewTransform/>
						<RotateTransform/>
						<TranslateTransform/>
					</TransformGroup>
				</TextBlock.RenderTransform>
			</TextBlock>
            <ProgressBar x:Name="progressbar" Foreground="#FF2BD409" Value="1" Opacity="0.92" HorizontalAlignment="Center" Width="174" Height="20" ValueChanged="progressbar_ValueChanged" Maximum="8"  />
		</StackPanel>
    </Grid>

</Window>
