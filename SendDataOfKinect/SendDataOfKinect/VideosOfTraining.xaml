<Window x:Class="SendDataOfKinect.VideosOfTraining"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VideosOfTraining" Height="1080" Width="1920" WindowState="Maximized" WindowStyle="None" Background="#FFD8D8D8"
        xmlns:local="clr-namespace:SendDataOfKinect"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="865*" />
            <RowDefinition Height="115*" />
            <RowDefinition Height="61*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1530*" />
            <ColumnDefinition Width="295*" />
            <ColumnDefinition Width="73*" />
        </Grid.ColumnDefinitions>
        <MediaElement x:Name="show_media" Stretch="Fill"  Source="Video\show.wmv"  MediaEnded="show_media_MediaEnded"  LoadedBehavior="Manual"  Loaded="show_media_Loaded" Grid.ColumnSpan="3" Grid.RowSpan="3" />
        <local:SkipButton Height="100" Width="270"  Grid.Column="1" Grid.Row="1" ButtonBase.Click="SkipButton_Click" />
    </Grid>
</Window>
